<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <groupId>org.gosu-lang.gosu</groupId>
    <artifactId>gosu-parent</artifactId>
    <version>1-X-SNAPSHOT</version>
    <relativePath>../gosu-parent/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>gosu-test</artifactId>

  <name>Gosu :: Test</name>

  <dependencies>
    <dependency>
      <groupId>org.gosu-lang.gosu</groupId>
      <artifactId>gosu-test-api</artifactId>
      <version>1-X-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.gosu-lang.gosu</groupId>
      <artifactId>gosu-core</artifactId>
      <version>1-X-SNAPSHOT</version>
    </dependency>
  </dependencies>

  <properties>
    <surefire.jvm.base.arg>-Dgw.tests.skip.knownbreak=true -DcheckedArithmetic=true</surefire.jvm.base.arg>
  </properties>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <executions>
          <execution>
            <!-- Note: Compiler requires MAVEN_OPTS="-DcheckedArithmetic=true" to successfully compile checked arithmetic tests -->
            <id>Compile Gosu test sources</id>
            <phase>test-compile</phase>
            <goals>
              <goal>testCompile</goal>
            </goals>
            <configuration>
              <compilerId>gosuc</compilerId>
              <useIncrementalCompilation>true</useIncrementalCompilation> <!-- this must be true or else we cannot pick up files with multiple extensions -->
              <verbose>true</verbose>
              <testIncludes>
                <include>**/*.gs</include>
                <include>**/*.gsx</include>
                <include>**/*.gst</include>
                <include>**/*.gsp</include>
              </testIncludes>
              <testExcludes>
                <exclude>**/Errant_*.gs</exclude>
                <exclude>**/Errant_*.gsx</exclude>
                <exclude>**/Errant_*.gst</exclude>
                <exclude>**/Errant_*.gsp</exclude>
              </testExcludes>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.gosu-lang.gosu</groupId>
            <artifactId>gosu-maven-compiler</artifactId>
            <version>1-X-SNAPSHOT</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <argLine>${surefire.jvm.base.arg}</argLine>
          <useUnlimitedThreads>true</useUnlimitedThreads>
          <includes>
            <include>gw/config*/**/*Test.class</include>
            <include>gw/internal*/**/*Test.class</include>
            <include>gw/lang*/**/*Test.class</include>
            <include>gw/spec*/**/*Test.class</include>
            <include>gw/test*/**/*Test.class</include>
            <include>gw/util*/**/*Test.class</include>
            <include>gw/xml*/**/*Test.class</include>
          </includes>
          <excludes>
            <exclude>gw/internal/gosu/parser/java/*</exclude>
            <exclude>gw/test/SuiteTest*</exclude>
            <exclude>**/*BenchmarkTest*</exclude>
            <exclude>**/junit/framework/TestSuite*BenchmarkTest*</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-test-source</id>
            <phase>generate-test-sources</phase>
            <goals>
              <goal>add-test-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>src/test/gosu</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-report-plugin</artifactId>
        <version>2.19.1</version>
      </plugin>
    </plugins>
  </reporting>
  
  <profiles>
    <profile>
      <id>CI</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>env.CI</name>
          <value>true</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <argLine>${surefire.jvm.base.arg} -Xmx1g</argLine>
              <useUnlimitedThreads>false</useUnlimitedThreads>
              <parallel>all</parallel>
              <perCoreThreadCount>true</perCoreThreadCount>
              <threadCount>2</threadCount>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  
</project>
